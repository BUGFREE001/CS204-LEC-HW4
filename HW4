#include <stdio.h>

int main(void)
{
    int n[3];  
    printf ("Please enter the receipts for three employees: ");
    for (int i=0; i<3; i++){
        scanf("%d", &n[i]);
    }
    
 char type_1[n[0]],type_2[n[1]],type_3[n[2]];
 float amt_1[n[0]],amt_2[n[1]], amt_3[n[2]];
 float totalA=0, totalB=0, totalC=0, sum1=0, sum2=0,sum3=0;


 printf("Please enter the %d receipt type and amounts for the #1 employee: \n", n[0]);
 for (int i=0; i<n[0]; i++){
   scanf("%s",&type_1[i]);      
   scanf("%f", &amt_1[i]);
 }

 for (int i=0; i<n[0]; i++){
   sum1 += amt_1[i];
   if (type_1[i]=='a' || type_1[i]=='A'){
       totalA += amt_1[i];
   }
   if (type_1[i]=='b' || type_1[i]=='B'){
       totalB += amt_1[i];
   }
   if (type_1[i]=='c' || type_1[i]=='C'){
       totalC += amt_1[i];
   }
 }


 printf("Please enter the %d receipt type and amounts for the #2 employee: \n", n[1]);
 for (int i=0; i<n[1]; i++){
   scanf("%s",&type_2[i]);     
   scanf("%f", &amt_2[i]);
 }
 for (int i=0; i<n[2]; i++){
   sum2 += amt_2[i];
   if (type_2[i]=='a' || type_2[i]=='A'){
       totalA += amt_2[i];
   }
   if (type_2[i]=='b' || type_2[i]=='B'){
       totalB += amt_2[i];
   }
   if (type_2[i]=='c' || type_2[i]=='C'){
       totalC += amt_2[i];
   }
 }


 printf("Please enter the %d receipt type and amounts for the #3 employee: \n", n[2]);
 for (int i=0; i<n[2]; i++){
   scanf("%s",&type_3[i]);    
   scanf("%f", &amt_3[i]);
 }
 for (int i=0; i<n[2]; i++){
   sum3 += amt_3[i];
   if (type_3[i]=='a' || type_3[i]=='A'){
       totalA += amt_3[i];
   }
   if (type_3[i]=='b' || type_3[i]=='B'){
       totalB += amt_3[i];
   }
   if (type_3[i]=='c' || type_3[i]=='C'){
       totalC += amt_3[i];
   }
 }
 
 printf("Employee ID      Amount\n");
 printf("     1           %.2f\n", sum1);
 printf("     2           %.2f\n", sum2);
 printf("     3           %.2f\n\n", sum2);
 printf("Receipt Type     Amount\n");
 printf("     A           %.2f\n", totalA);
 printf("     B           %.2f\n", totalB);
 printf("     C           %.2f\n", totalC);




 return 0;
 
 
