 #3
 
 
 #include <stdio.h>

int main()
{
    int r, c;
    printf("Enter the size of row and column: ");
    scanf ("%d%d", &r, &c);

    int a[r][c];
    printf("Enter each of the element in the matrix: \n");
    for (int i=0; i<r; i++){
        for (int j=0; j<c; j++){
            scanf("%d", &a[i][j]);
        }
    }

    int n;
    n=r+c;

    printf("Output: \n");
    for(int x=0; x<=n; x++){
        for (int i=0; i<r; i++){
            for (int j=0; j<c; j++){
               if (i+j == x){
                   printf("%d ", a[i][j]);
               }
            }
        }
    }
    return 0;
}




