#4
 
 
#include <stdio.h>

void sort ();

int main()
{
    int n;
    float th;
    printf("Enter how many patients currently there are, and threshold\nvalue of ICU: ");
    scanf("%d %f", &n, &th);
    int id[n];
    float condition[n];

    printf("Enter each patientâ€™s ID and condition indicator: \n");

    for (int i=0; i<n; i++){
        scanf("%d",&id[i]);
        scanf("%f", &condition[i]);
    }
    
    sort (condition, id, n);
    printf("Outputs: \n");

    for (int i=0; i<n; i++){
        if (condition[i]>th){
            printf("%03d %.2f\n", id[i], condition[i]);
        }
    }
   return 0;
}
 
void sort (float condition[], int id[], int n){
	 for (int i=1; i<n; i++){
		 for (int j=0; j<n-i; j++){
			float temp1;
			int temp2;
			if (condition[j]<condition[j+1]){
				temp1 = condition[j];
				condition[j] = condition[j+1];
				condition[j+1] = temp1;
               
				temp2 = id[j];
				id[j] = id[j+1];
				id[j+1] = temp2;
			}
		 }
	 }
 } 
 


