 #2
 
#include <stdio.h>

int main()
{
  int n;
  int r,c;
  printf("Enter how many matrixs do you have: ");
  scanf("%d", &n);
  int sum[n];
  for (int i=0; i<n; i++){
      printf("Enter how many rows and columns are in %d", i+1);
      (i==0)? printf("st "):(i==1)? printf("nd "): (i==2)? printf("rd "):printf("th ");
      printf ("matrix: ");
      scanf("%d%d", &r, &c);

      int a[r][c];
      int total=0;
      printf("Enter each element for %d", i+1);
      (i==0)? printf("st "):(i==1)? printf("nd "): (i==2)? printf("rd "):printf("th ");
       printf ("matrix: \n");

      for (int x=0; x<r; x++){
          for (int y=0; y<c; y++){
              scanf("%d", &a[x][y]);
              if (x==0 || y==0 ||x==r-1||y==c-1) {
                  total += a[x][y];
              }
          }
      }

      sum[i]=total;
  }

  for (int i=0; i<n; i++){
      printf("%d\n", sum[i]);
  }
  return 0;
}



