#5


#include <stdio.h>

int main()
{
 char a[1000];
 printf("Enter one of strand in a molecule of DNA: : \n");

 gets(a);
 int i=0;
 printf("Output:\nComplementary strand: \n");
 while (a[i]!='\0')
 {
    if (a[i]=='A')
    {
      a[i]='T';
    }
    else if (a[i]=='T')
    {
      a[i]='A';
    }
    else if (a[i]=='G')
    {
      a[i]='C';
    }
    else if (a[i]=='C')
    {
      a[i]='G';
    }
    printf("%c", a[i]);
    i++;
 }

 return 0;
}
